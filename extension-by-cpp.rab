= From Ruby: Ext++

  # coderay ruby
  def fib(n)
    prev = 1
    current = 1
    1.step(n - 1).collect do
      prev, current = current, current + prev
      prev
    end
  end

= From Ruby: Ext++

  # coderay cpp
  std::vector<uint64_t> fib(int n) {
    uint64_t prev = 1
    uint64_t current = 1
    std::vector<uint64_t> numbers;
    for (int i = 1; i < n; ++i) {
      numbers.push_back(current);
      auto temp = current;
      current += prev;
      prev = temp;
    }
    return numbers;
  }

